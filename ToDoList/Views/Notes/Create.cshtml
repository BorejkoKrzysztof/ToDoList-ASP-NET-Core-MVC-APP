@model ToDoListInfrastructure.Models.ViewModels.Notes.CreateNotesViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Note</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Notes" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ToDoEntryId" type="hidden" class="form-control" value="@ViewBag.ToDoEntryId" />
            <input asp-for="ToDoListId" type="hidden" class="form-control" value="@ViewBag.ToDoListId" />
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control my-text-input" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn my-button-class" />
                <a asp-controller="Notes" asp-action="Index" asp-route-toDoEntryId="@ViewBag.ToDoEntryId" asp-route-toDoListId="@ViewBag.ToDoListId" class="btn my-button-class" style="width:130px;">Back to List</a>
            </div>
        </form>
    </div>
</div>


