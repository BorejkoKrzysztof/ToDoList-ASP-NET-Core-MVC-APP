@model CreateToDoListViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ToDoList" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control my-text-input" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn my-button-class" style="width: 90px;" />
                <a asp-action="Index"  class="btn my-button-class" style="width: 130px;">Back to List</a>
            </div>
        </form>
    </div>
</div>

