@model UpdateToDoListViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit ToDoList</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToDoListId" value="@ViewBag.SelectedIdToEdit"/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control my-text-input" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br />
            <div style="display: flex;">
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn my-button-class" />
                </div>
                <div>
                    <a asp-action="Index" class="btn my-button-class" style="width: 130px;">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

